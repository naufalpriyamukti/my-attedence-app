<!DOCTYPE html>
<html lang="id">
<%- include('../partials/header') %>
<body>
    <div class="page">
        <%- include('../partials/sidebar') %>
        <div class="page-wrapper">
            <div class="page-header d-print-none">
                <div class="container-xl">
                    <div class="row g-2 align-items-center">
                        <div class="col">
                            <h2 class="page-title">Laporan Absensi</h2>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="page-body">
                <div class="container-xl">
                    
                    <div class="card mb-3">
                        <div class="card-body">
                            <form action="/admin/laporan" method="GET">
                                <div class="row g-2 align-items-end">
                                    <div class="col-md-6">
                                        <label class="form-label">Pilih Tanggal</label>
                                        <input type="date" name="tanggal" class="form-control" value="<%= typeof filterDate !== 'undefined' ? filterDate : new Date().toISOString().split('T')[0] %>">
                                    </div>
                                    <div class="col-md-6">
                                        <div class="d-flex gap-2">
                                            <button type="submit" class="btn btn-primary w-100">
                                                <i class="fas fa-filter me-2"></i> Tampilkan Data
                                            </button>
                                            <a href="#" onclick="exportExcel()" class="btn btn-success w-100">
                                                <i class="fas fa-file-excel me-2"></i> Export Excel
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>

                    <div class="card">
                        <div class="table-responsive">
                            <table class="table card-table table-vcenter text-nowrap datatable">
                                <thead>
                                    <tr>
                                        <th class="w-1">No</th>
                                        <th>Waktu Absen</th>
                                        <th>NIM</th>
                                        <th>Nama Lengkap</th>
                                        <th>Prodi</th>
                                        <th>Status</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% if(absensi.length === 0) { %>
                                        <tr><td colspan="6" class="text-center py-5 text-muted">Tidak ada data absensi pada tanggal ini.</td></tr>
                                    <% } %>

                                    <% absensi.forEach((row, index) => { %>
                                        <tr>
                                            <td><span class="text-muted"><%= index + 1 %></span></td>
                                            <td>
                                                <%= new Date(row.waktu_absen).toLocaleString('id-ID', { 
                                                    day: 'numeric', month: 'short', year: 'numeric', 
                                                    hour: '2-digit', minute: '2-digit', second: '2-digit' 
                                                }) %> WIB
                                            </td>
                                            <td><span class="badge bg-blue-lt"><%= row.peserta?.nim || '-' %></span></td>
                                            <td class="fw-bold"><%= row.peserta?.nama || 'Peserta Terhapus' %></td>
                                            <td><%= row.peserta?.prodi || '-' %></td>
                                            <td>
                                                <% if (row.status === 'Hadir') { %>
                                                    <span class="badge bg-success me-1"></span> Hadir
                                                <% } else if (row.status === 'Terlambat') { %>
                                                    <span class="badge bg-warning me-1"></span> Terlambat
                                                <% } else if (row.status === 'Izin') { %>
                                                    <span class="badge bg-info me-1"></span> Izin
                                                <% } else { %>
                                                    <span class="badge bg-secondary me-1"></span> <%= row.status %>
                                                <% } %>
                                            </td>
                                        </tr>
                                    <% }) %>
                                </tbody>
                            </table>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
    <%- include('../partials/scripts') %>

    <script>
        // Script sederhana untuk mengatur link export agar sesuai dengan tanggal yang dipilih di input
        function exportExcel() {
            const dateValue = document.querySelector('input[name="tanggal"]').value;
            // Redirect ke route export dengan parameter tanggal
            window.location.href = `/admin/export-laporan?tanggal=${dateValue}`;
        }
    </script>
</body>
</html>