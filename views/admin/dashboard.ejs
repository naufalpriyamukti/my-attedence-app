<!DOCTYPE html>
<html lang="id">
<%- include('../partials/header') %>
<body>
    <div class="page">
        <%- include('../partials/sidebar') %>
        <div class="page-wrapper">
            <div class="page-header d-print-none">
                <div class="container-xl">
                    <div class="row g-2 align-items-center">
                        <div class="col">
                            <div class="page-pretitle">Overview</div>
                            <h2 class="page-title">Dashboard</h2>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="page-body">
                <div class="container-xl">
                    
                    <div class="row row-deck row-cards mb-4">
                        <div class="col-sm-6 col-lg-3">
                            <div class="card">
                                <div class="card-body">
                                    <div class="d-flex align-items-center">
                                        <div class="subheader">Total Peserta</div>
                                    </div>
                                    <div class="h1 mb-3"><%= stats.total %></div>
                                    <div class="d-flex mb-2">
                                        <div>Terdaftar di sistem</div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-6 col-lg-3">
                            <div class="card card-active"> <div class="card-body">
                                    <div class="d-flex align-items-center">
                                        <div class="subheader">Hadir Hari Ini</div>
                                    </div>
                                    <div class="h1 mb-3 text-success"><%= stats.hadir %></div>
                                    <div class="d-flex mb-2">
                                        <span class="text-success me-2"><i class="fas fa-check"></i></span> Tepat Waktu
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-6 col-lg-3">
                            <div class="card">
                                <div class="card-body">
                                    <div class="d-flex align-items-center">
                                        <div class="subheader">Terlambat</div>
                                    </div>
                                    <div class="h1 mb-3 text-warning"><%= stats.terlambat %></div>
                                    <div class="d-flex mb-2">
                                        <span class="text-warning me-2"><i class="fas fa-clock"></i></span> Absen Lewat Jam
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-6 col-lg-3">
                            <div class="card">
                                <div class="card-body">
                                    <div class="d-flex align-items-center">
                                        <div class="subheader">Belum Absen</div>
                                    </div>
                                    <div class="h1 mb-3 text-danger"><%= stats.belum %></div>
                                    <div class="d-flex mb-2">
                                        <span class="text-danger me-2"><i class="fas fa-times"></i></span> Perlu konfirmasi
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-12">
                        <div class="card">
                            <div class="card-header">
                                <h3 class="card-title">Daftar Peserta Belum Absen Hari Ini</h3>
                            </div>
                            <div class="card-body border-bottom py-3">
                                <div class="d-flex">
                                    <div class="text-muted">
                                        Menampilkan data peserta yang belum melakukan scan kehadiran hari ini.
                                    </div>
                                </div>
                            </div>
                            <div class="table-responsive">
                                <table class="table card-table table-vcenter text-nowrap datatable">
                                    <thead>
                                        <tr>
                                            <th>NIM</th>
                                            <th>Nama Lengkap</th>
                                            <th>Prodi</th>
                                            <th class="w-1">Status</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% if (belumAbsenList.length === 0) { %>
                                            <tr><td colspan="4" class="text-center">Semua peserta sudah hadir! ðŸŽ‰</td></tr>
                                        <% } %>
                                        <% belumAbsenList.slice(0, 10).forEach(p => { %>
                                            <tr>
                                                <td><span class="text-muted"><%= p.nim %></span></td>
                                                <td><span class="fw-bold"><%= p.nama %></span></td>
                                                <td><%= p.prodi %></td>
                                                <td><span class="badge bg-danger me-1"></span> Belum Hadir</td>
                                            </tr>
                                        <% }) %>
                                        <% if (belumAbsenList.length > 10) { %>
                                            <tr><td colspan="4" class="text-center text-muted">... dan <%= belumAbsenList.length - 10 %> lainnya</td></tr>
                                        <% } %>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
    <%- include('../partials/scripts') %>
</body>
</html>